rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow read access to the availability collection
    match /availability/{document} {
      allow read: if true;
    }
    // Allow read access to the videos collection
    match /videos/{document} {
      allow read: if true;
    }
    // Allow read access to the blogs collection
    match /blogs/{document} {
      allow read: if true;
    }
    // Existing rules for other collections
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
